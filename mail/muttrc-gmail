# Account
set spoolfile = "+gmail/INBOX"

# Select all subdirs as mailboxes
unmailboxes *
mailboxes   `echo ~/.mail/gmail/*`
set postponed = "+gmail/gmail.Drafts"

# Mailbox shortcuts
macro index gi "<change-folder> =gmail/INBOX<enter>" "go to inbox"
macro index gs "<change-folder> =gmail/gmail.sent<enter>" "go to sent mail"
macro index gt "<change-folder> =gmail/gmail.Trash<enter>" "go to trash"
macro index gd "<change-folder> =gmail/gmail.Drafts<enter>" "go to drafts"

# Deletion
macro index d "<save-message>+gmail/gmail.Trash<enter>" "move message to trash"

# smtp sending
source '~/dotfiles/mail/smtp-gmail'
unhook send-hook
unhook reply-hook
send-hook . source '~/dotfiles/mail/smtp-gmail'
reply-hook . source '~/dotfiles/mail/smtp-gmail'
reply-hook '~t @comcast.net' source '~/dotfiles/mail/smtp-comcast'
reply-hook '~t @groups.facebook.com' source '~/dotfiles/mail/smtp-comcast'
reply-hook '~t @ufl.edu' source '~/dotfiles/mail/smtp-ufl'
