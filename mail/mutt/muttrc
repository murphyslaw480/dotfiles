set editor    = `echo \$EDITOR`
set my_name   = "Ryan"
set folder    = "imaps://imap.gmail.com/"
set imap_user = "murphyslaw480@gmail.com"
set imap_pass = `pass mail/gmail`
set spoolfile = +INBOX
mailboxes     = +INBOX

#cache headers locally for speed
set header_cache = "~/.cache/mutt"
#cache messages locally for speedup
set message_cachedir = "~/.cache/mutt"

# Where to save drafts
set postponed = +[Gmail]/Drafts

# Allow Mutt to open new imap connection automatically
unset imap_passive

# Keep IMAP connection alive by polling (time in s)
set imap_keepalive = 300

# How often to check for new mail
set mail_check = 120
