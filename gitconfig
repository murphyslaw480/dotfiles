[alias]
	st      = status
	br      = branch
	ci      = commit -v
	ca      = commit -va
	cm      = commit -m
	cma     = commit -am
	cmend   = commit -v --amend
	cmendr  = commit --amend --reuse-message=HEAD
	co      = checkout
	sho     = show --name-status
	dif     = diff --name-status
	diffc   = diff --cached
	lo      = log --oneline
	graph   = log --graph --decorate=full --oneline --all
	fetcha  = fetch --all
	cp      = cherry-pick
	msg     = log -1 --format=msg
	vim     = !nvim -p $(git diff HEAD~ --name-only)
	sync    = !git pull && git push

	# identifying and removing merged branches
	junk = "!f() { git for-each-ref refs/heads --format '%(refname:strip=2)' --merged $1; }; f"
	deljunk = "!f() { git branch -D $(git junk $1); }; f"

	thisbr = rev-parse --abbrev-ref HEAD
	pushup = !git push -u origin $(git thisbr)
[color]
	ui = auto
[core]
	editor = nvim
	excludesfile = ~/dotfiles/gitignore-global
[user]
	name = Ryan Roden-Corrent
	email = ryan@rcorre.net
[push]
	default = current
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[rebase]
	autosquash = true
[pretty]
	msg = format:%s%n%n%b

# vim: noexpandtab
