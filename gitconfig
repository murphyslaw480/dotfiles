[alias]
	st      = status
	br      = branch
	ci      = commit
	ca      = "commit -a"
	cm      = "commit -m"
	cma     = "commit -am"
	cmend   = "commit --amend"
	cmendr  = "commit --amend --reuse-message=HEAD"
	co      = checkout
	adda    = "add --all"
	dif     = diff --name-only
	diffc   = diff --cached
  graph   = log --graph --decorate=full --oneline --all
[color]
	ui = auto
[core]
	editor       = vim
	excludesfile = ~/dotfiles/gitignore-global
[user]
	name = Ryan Roden-Corrent
	email = ryan@rcorre.net
[push]
	default = upstream
[merge]
	tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
